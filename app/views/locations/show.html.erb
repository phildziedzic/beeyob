<h1><%= @location.name %></h1>	
	<h3> BYOB Rating: </h3>

<!-- turn this in to a partial! -->
	<% if @location.byob == 1 %>
		<h1 class = "byob-good">
			<strong> Good </strong> 
		</h1>
	<% elsif @location.byob == 2 %>
		<h1 class = "byob-meh">
			<strong>Meh</strong>
		</h1>
	<% elsif @location.byob == 3 %>
		<h1 class = "byob-poor">
			<strong>Poor</strong>
		</h1>
	<% else %>
		<h1 class = "byob-na">
			<strong>Not Rated</strong>
		</h1>
	<% end %>


	<p>
		<%= @location.phone %>
		<br>
		<%= @location.address %> -
		<%= @location.address2 %>
		<br>
		<%= @location.city %>, <%= @location.state %> <%= @location.zip %>
	</p>


<div class = "button-link" ><%= link_to "Edit This Location", edit_location_path %></div>


<p><strong>Last updated:</strong> <%= time_ago_in_words(@location.updated_at.localtime) %> ago by <%= @location.user.name %></p>